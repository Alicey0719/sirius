<% @page_title = "イベント管理" %>
<h1><%= @page_title %></h1>

<% if @events.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>ID</th>
        <th>イベント名</th>
        <th>開催者</th>
        <th>開催日</th>
        <th>価格</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |e| %>
        <tr>
        <td><%= e.id %></td>
          <td><%= link_to e.name, admin_event_path(e) %></td>
          <td><%= link_to e.member.user_name, admin_member_path(e.member) %>|<%=e.member.full_name%></td>
          <td><%= e.held_at&.strftime("%Y年%m月%d日") %></td>
          <td><%= e.price.to_s(:delimited) %>円</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @events %>
<% else %>
  <p>イベントが見つかりませんでした。</p>
<% end %>
