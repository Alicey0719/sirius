<% if @events.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>開催日</th>
        <th>イベント名</th>
        <th>価格</th>
        <th>限定数</th>
        <th>売上枚数</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |e| %>
        <tr>
            <td style="text-align: right"><%= e.held_at&.strftime("%Y年%m月%d日") %></td>
            <td style="text-align: right"><%= link_to e.name, e %></td>
            <td style="text-align: right"><%= e.price.to_s(:delimited) %>円</td>
            <td style="text-align: right"><%= e.capacity.to_s(:delimited) %></td>
            <td style="text-align: right"><%= e.tickets.count.to_s(:delimited) %></td>
            <td style="text-align: right"><%= link_to "編集", edit_event_path(e) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @events %>
<% else %>
  <p>開催したイベントが見つかりませんでした。</p>
<% end %>
