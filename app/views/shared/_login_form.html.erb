<h2>ログイン</h2>
<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag :login, id: "login-form" do %>
  <div>
    <label>ユーザー名：</label>
    <input type="text" name="user_name">
  </div>
  <div>
    <label>パスワード：</label>
    <input type="password" name="password">
  </div>
  <div>
    <input type="submit" value="ログイン">
  </div>
  <%= link_to "会員登録はこちら" , :new_account %>
<% end %>
