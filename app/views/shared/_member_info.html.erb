<table class="attr">
  <tr>
    <th>ユーザー名</th>
    <td><%= @member.user_name %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @member.full_name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= @member.gender == 1 ? "Man" :
            @member.gender == 2 ? "Woman" : "Other"  
        %></td>
  </tr>
  <tr>
    <th>誕生日</th>
    <td><%= @member.birthday&.strftime("%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
  <tr>
    <th>会員ランク</th>
    <td>
      <% rank = member_rank(member_reputation(@member)) %>
      <%= if rank >3 then
                  "PLATINUM"
              elsif rank >2 then
                  "GOLD"
              elsif rank >1 then
                  "SILVER"
              elsif rank >0 then
                  "BRONZE"
              else
                  "STANDARD"
              end%>
      </td>
  </tr>
</table>
